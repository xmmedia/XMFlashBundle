{
    "name": "xm/flash-bundle",
    "description": "Makes adding & translating flash messages in Symfony simple.",
    "type": "symfony-bundle",
    "homepage": "https://github.com/xmmedia/XMFlashBundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Darryl Hein",
            "email": "dhein@xmmedia.com"
        }
    ],
    "require": {
        "php": "^5.6 || ^7.0",
        "symfony/framework-bundle": "~3.0",
        "symfony/translation": "~3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "5.7.*",
        "symfony/var-dumper": "^3.0",
        "symfony/phpunit-bridge": "^3.0",
        "mockery/mockery": "^0.9"
    },
    "autoload": {
        "psr-4": { "XM\\FlashBundle\\": "" },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    }
}
